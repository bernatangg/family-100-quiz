<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:orientation="vertical"
    tools:context=".Level1Activity">

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/ic_check"/>

    <ImageView
        android:id="@+id/iv_wrong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/ic_wrong"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LEVEL 1"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_skor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="12dp"
        android:textColor="@color/red60"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_ask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LEVEL 1"
        android:layout_marginTop="12dp"
        android:textStyle="italic"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/jwb_1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/blue40"
        android:gravity="center_horizontal"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/jwb_2"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/blue40"
        android:gravity="center_horizontal"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/jwb_3"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/blue40"
        android:gravity="center_horizontal"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/jwb_4"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/blue40"
        android:gravity="center_horizontal"
        android:textColor="#FFF"/>


    <EditText
        android:id="@+id/et_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textColor="#FFF"
        android:background="@color/orange60"
        android:layout_marginTop="12dp"/>


    <TextView
        android:id="@+id/tv_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_marginTop="12dp"
        android:textColor="@color/yellow40"
        android:textStyle="bold"
        android:textSize="28sp"
        android:gravity="center_horizontal"/>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_baseline_home"
        android:layout_marginTop="12dp"/>

</LinearLayout>